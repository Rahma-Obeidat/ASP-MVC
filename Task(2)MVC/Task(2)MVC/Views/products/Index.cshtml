@model IEnumerable<Task_2_MVC.product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create" , new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category.cName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pImage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category.cName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }, new {@class= "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id=item.id } , new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id } , new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
