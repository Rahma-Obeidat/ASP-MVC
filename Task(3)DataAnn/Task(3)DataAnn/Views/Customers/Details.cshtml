@model Task_3_DataAnn.Customer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fname)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Job_Title)*@
            Job Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Job_Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>

        @*<dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>*@
        @if (Model.Gender == true)
        {
            <dd>
                <span>Female</span>
            </dd>

        }
        else
        {
            <dd>
                <span>Male</span>

            </dd>

        }


        <dt>
            @Html.DisplayNameFor(model => model.C_Image)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.C_Image)*@
            <img src="~/pic/@Model.C_Image" width="50" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CV)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.CV)*@
            <a href="~/pdf/@Model.CV" download>CV</a>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
